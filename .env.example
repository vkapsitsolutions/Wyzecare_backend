# ─── Server Configuration ──────────────────────────────
PORT=3000
NODE_ENV=development

# ─── Database Configuration (PostgreSQL) ───────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=my_database

# ─── JWT Configuration ─────────────────────────────────
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_TOKEN_EXPIRES=15m         # example: 15m, 1h, 7d
JWT_REFRESH_TOKEN_EXPIRES=7d         # example: 7d, 30d

# ─── SendGrid Email Configuration ──────────────────────
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_SENDER_MAIL=no-reply@example.com

# ─── Super Admin Credentials ────────────────────────────
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=super_secure_password

# ─── Frontend Configuration ─────────────────────────────
FRONTEND_URL=http://localhost:5173

# ─── AWS S3 Configuration ───────────────────────────────
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_BUCKET_REGION=ap-south-1

# ─── Calling Service Configuration ──────────────────────
CALLING_SERVICE_URI=https://calling-service.example.com
CALLING_SERVICE_TOKEN=your_calling_service_token

# ─── Webhook Configuration ──────────────────────────────
WEBHOOK_SECRET=your_webhook_secret

# ─── Stripe Configuration ───────────────────────────────
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_MONTHLY_PRICE_ID=price_123456789
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret


# ─── Google oauth2 Configuration ───────────────────────────────
GOOGLE_CLIENT_ID=1212121212-example-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-example-client-secret-x
CALLBACK_URL=http://localhost:4000/api/auth/google/callback
